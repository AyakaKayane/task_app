<h3>スケジュール詳細</h3>
 
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @user.title %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= @user.start %></td>
      </tr>
      <tr>
        <th>投稿日時</th>
        <td><%= @user.updated_at.to_s(:datetime_jp) %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td><% maru = if user.allday %>
            <%               "◯"           %>
            <%              else           %>
            <%               ""           %>
            <%              end            %>
            <%= maru %>
        </td>
      </tr>
      <tr>
        <th>スケジュールメモ</th>
        <td><%= @user.memo %></td>
      </tr>
    </table>
 
    <div>
      <ul>
        <li><%= link_to "スケジュールを編集する", edit_user_path%></li>
        <li><%= link_to "スケジュール一覧に戻る", :user_index %></li>
        <li><%= link_to "スケジュールを削除する", user_path, method: :delete, data: { confirm: "本当に削除しますか？" } %></li>

      </ul>
    </div>